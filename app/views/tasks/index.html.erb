<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Project #</th>
      <th>Title</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Autor</th>
      <th>Executor</th>
      <th>Estimation Time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.project_id %></td>
        <td><%= task.title %></td>
	<td><%= task.description %></td>
	<td><%= task.notes %></td>
	<td><%= task.autor %></td>
	<td><%= task.executor %></td>
	<td><%= task.estimation_time %></td>
	<td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

